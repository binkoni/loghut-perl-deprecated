<h1>Modify Post</h1>
<form class="span10_center" action="[% GET url_path %]/admin/index.pl" method="post">
    <input type="hidden" name="action" value="modify"/>
    <input type="hidden" name="url_path" value="[% GET post.url_path %]"/>
    <label for="title">Title</label>
    <input style="width:100%" type="text" id="title" name="title" value="[% post.title %]"/>
    <input type="checkbox" id="secret" name="secret" [% GET post.secret %]/>
    <label for="secret">Secret</label><br/>
    <label for="tags">Tags</label>
    <input style="width:100%" type="text" id="tags" name="tags" value="[% post.tags.join(',') %]"/>
    <label for="text">Text</label>
    <textarea class="ckeditor" style="width:100%;height:30rem" id="text" name="text">[% GET post.text %]</textarea>
    <input style="float:right;display:inline-block" type="submit" value="Modify"/>
</form>
<script src="http://gonapps.io/blog/admin/js/ckeditor/ckeditor.js" type="text/javascript"></script>
